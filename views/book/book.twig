{% extends 'concern/layout.twig' %}
{% block title %}
    its a fucking book
{% endblock %}

{% block content %}
    <div class="book-page">
        <div class="box">
            <book-item :book="{{ book.jsonSerialize()|json_encode() }}"></book-item>
        </div>

        {% if book.customers %}
            <h2 class="title is-4">Borrowed by</h2>
            <div class="columns">
                {% for customer in book.customers %}
                    <div class="column is-4 is-pulled-left">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    <img src="https://bulma.io/images/placeholders/1280x960.png"
                                         alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <figure class="image is-48x48">
                                            <img src="https://bulma.io/images/placeholders/96x96.png"
                                                 alt="Placeholder image">
                                        </figure>
                                    </div>
                                    <div class="media-content">
                                        <p class="title is-4">{{ customer.firstname }}</p>
                                        <p class="subtitle is-6">
                                            <a href="mailto://{{ customer.email }}">{{ customer.email }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}