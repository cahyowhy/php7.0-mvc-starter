{% extends 'concern/layout.twig' %}
{% block content %}
    <div class="login">
        <section class="login hero is-fullheight">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <div class="column is-4 is-offset-4">
                        {% block head_title %}
                        {% endblock %}
                        <div class="box">
                            <figure class="avatar">
                                <img src="https://placehold.it/128x128">
                            </figure>
                            {% block form %}
                            {% endblock %}
                        </div>
                        <p class="has-text-grey">
                            {% block btn_foot %}
                            {% endblock %}
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}